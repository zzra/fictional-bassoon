<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- top menu -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/sharedAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:title="@string/app_name"
            app:menu="@menu/top_app_bar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary" />
    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationX="@dimen/person02_translateX"
            android:layout_marginTop="@dimen/person02_marginTop"
            android:scaleY="@fraction/person02_scaleY"
            android:scaleX="@fraction/person02_scaleX"
            android:src="@drawable/person_02" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/actionbar_height"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/personhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/personhead_marginTop"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/personhead_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/personitem_margin"
                android:src="@mipmap/ic_ballcap_01"></ImageView>

            <ImageView
                android:id="@+id/personhead_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/personitem_margin"
                android:src="@mipmap/ic_ballcap_01"></ImageView>

            <ImageView
                android:id="@+id/personhead_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/personitem_margin"
                android:src="@mipmap/ic_ballcap_01"></ImageView>

            <ImageView
                android:id="@+id/personhead_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/personitem_margin"
                android:src="@mipmap/ic_ballcap_01"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/persontop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/personitem_margin"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/persontop_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/personitem_margin"
                android:src="@mipmap/ic_tshirt"></ImageView>

            <ImageView
                android:id="@+id/persontop_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/personitem_margin"
                android:src="@mipmap/ic_tshirt"></ImageView>

            <ImageView
                android:id="@+id/persontop_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/personitem_margin"
                android:src="@mipmap/ic_tshirt"></ImageView>

            <ImageView
                android:id="@+id/persontop_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/personitem_margin"
                android:src="@mipmap/ic_tshirt"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/personbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/personitem_margin"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/personbottom_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/personitem_margin"
                android:src="@mipmap/ic_longpants_01"></ImageView>

            <ImageView
                android:id="@+id/personbottom_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/personitem_margin"
                android:src="@mipmap/ic_longpants_01"></ImageView>

            <ImageView
                android:id="@+id/personbottom_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/personitem_margin"
                android:src="@mipmap/ic_longpants_01"></ImageView>

            <ImageView
                android:id="@+id/personbottom_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/personitem_margin"
                android:src="@mipmap/ic_longpants_01"></ImageView>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/personitem_margin"
            app:backgroundTint="@color/red"
            app:srcCompat="@drawable/heart_05"
            android:visibility="invisible"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
